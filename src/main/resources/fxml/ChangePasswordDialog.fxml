<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.ui.ChangePasswordController"
      spacing="15" styleClass="dialog-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Change Password" styleClass="section-title"/>

    <GridPane hgap="15" vgap="10">
        <Label text="Current Password:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <PasswordField fx:id="currentPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="New Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

        <Label text="Confirm New Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200"/>
    </GridPane>

    <Label fx:id="messageLabel" styleClass="message-label"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Change Password" fx:id="changeButton" onAction="#handleChangePassword" styleClass="primary-button"/>
        <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel" styleClass="secondary-button"/>
    </HBox>
</VBox>
