<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.ui.StudentProfileController"
      spacing="20" styleClass="profile-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="My Profile" styleClass="section-title"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Label text="Student ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="studentIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="nameLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="usernameLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Program:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="programLabel" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Required Credits:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="requiredCreditsLabel" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Completed Credits:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="completedCreditsLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Remaining Credits:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="remainingCreditsLabel" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="field-value"/>

        <Label text="Graduation Status:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="field-label"/>
        <Label fx:id="graduationStatusLabel" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="field-value"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Refresh" fx:id="refreshButton" onAction="#handleRefresh" styleClass="primary-button"/>
        <Button text="Change Password" fx:id="changePasswordButton" onAction="#handleChangePassword" styleClass="secondary-button"/>
    </HBox>
</VBox>
